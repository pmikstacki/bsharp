---
import '../styles/tailwind.css';
import Navbar from '../components/Navbar.astro';
const { title = 'BSharp' } = Astro.props;
const rawBase = import.meta.env.BASE_URL || '/';
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
---
<!doctype html>
<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="light dark" />
    <script type="module">
      import '/src/scripts/material-colors.ts';
      import { generateSimplePalette, applyPaletteToNavbar } from '/src/scripts/palette-utils.js';
      
      // Apply the same cyan palette as main site for consistency
      function applyDocsPalette() {
        // Generate palette using the same cyan color as main site
        const vars = generateSimplePalette('#00C9B9');
        
        // Apply to navbar and global colors using shared utility
        applyPaletteToNavbar(vars);
      }
      
      // Apply palette immediately when script loads
      applyDocsPalette();
    </script>
    <title>{title}</title>
  </head>
  <body class="relative min-h-dvh bg-white text-slate-900 dark:bg-slate-950 dark:text-slate-100">
    <div class="fixed inset-0 -z-10 hero-gradient mesh-gradient animate-mesh"></div>
    <div class="blob blob-blue animate-pulse-slow -z-10 left-[10%] top-[-6%] h-80 w-80"></div>
    <div class="blob blob-pink animate-pulse-slow -z-10 right-[12%] top-[8%] h-72 w-72"></div>
    <div class="blob blob-amber animate-pulse-slow -z-10 left-[50%] top-[60%] h-96 w-96"></div>
    <div class="pointer-events-none fixed inset-0 -z-10 vignette"></div>
    <div class="sticky top-0 z-40 border-b border-white/10 bg-white/5 backdrop-blur-xl shadow-[0_1px_0_0_rgba(255,255,255,0.06)]">
      <Navbar buttons="docs" base={base} />
    </div>
    <main class="h-[calc(100dvh-60px)] min-h-[calc(100dvh-60px)] w-full p-0 flex">
      <slot />
    </main>
  </body>
</html>
